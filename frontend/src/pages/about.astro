---
import BaseLayout from "../layouts/BaseLayout.astro";
import Center from "../components/Center.astro";
import PageHeader from "../components/PageHeader.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import type { ImageMetadata } from "astro";
import SocialLinks from "../components/SocialLinks.astro";

// ===== 页面元信息 =====
const locale: "en" | "zh" = "en";

// 读取集合：按语言与草稿过滤
const entries = await getCollection(
  "about",
  (e) => e.data.locale === locale && !e.data.draft,
);

// 取第一篇（singleton 约定只存 1 篇）
const about = entries[0]?.data as CollectionEntry<"about">["data"];

// 若没内容，兜底
const title = about?.title ?? "ABOUT ME";
const description = about?.description ?? "";

const updated = new Date()
  .toLocaleDateString("ja-JP", { timeZone: "Asia/Tokyo" })
  .replaceAll("/", "-");

function getAvatarSrc(avatar: string | ImageMetadata | undefined) {
  if (!avatar) return { src: "", w: 0, h: 0, isMeta: false };
  if (typeof avatar === "string")
    return { src: avatar, w: 0, h: 0, isMeta: false };
  return { src: avatar.src, w: avatar.width, h: avatar.height, isMeta: true };
}
const av = getAvatarSrc(about?.avatar);
---

<BaseLayout title={title} description={description} includeFooter padBottom>
  <PageHeader title={title} description={description} />
  <Center>
    <article class="about">
      <p class="updated">Updated: {updated}</p>

      <!-- 顶部：头像 + 简介 -->
      <section class="intro">
        {
          about?.avatar && (
            <div class="avatar-wrap">
              <img
                src={av.src}
                alt={about?.avatarAlt ?? "Portrait"}
                width={av.w || 360}
                height={av.h || 480}
                loading="eager"
                class="avatar"
              />
            </div>
          )
        }
        <div class="intro-text">
          <p>{about?.intro}</p>

          {
            Array.isArray(about?.links) && about.links.length > 0 && (
              <SocialLinks
                links={about.links}
                align="center"
                size={24}
                gap={16}
              />
            )
          }
        </div>
      </section>

      <!-- Skills -->
      {
        about?.skills && (
          <section class="block">
            <h2 class="block-title">SKILLS</h2>
            <div class="skills">
              {Object.entries(about.skills).map(([group, items]) => (
                <div class="skill-group">
                  <h3 class="skill-head">{group}</h3>
                  <ul class="pills">
                    {(items as { name: string; tip?: string }[]).map((it) => (
                      <li class="pill" data-tip={it.tip ?? undefined}>
                        {it.name}
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </section>
        )
      }

      <!-- Experience -->
      {
        about?.experience?.length && (
          <section class="block">
            <h2 class="block-title">EXPERIENCE</h2>
            <ol class="timeline">
              {about.experience.map((e) => (
                <li class={`timeline-item ${e.type || ""}`}>
                  <div class="when">{e.when}</div>
                  <div class="what">
                    <div class="line">
                      {e.link ? (
                        <a
                          href={e.link}
                          target="_blank"
                          rel="noopener noreferrer"
                        >
                          <b>{e.where}</b>
                        </a>
                      ) : (
                        <b>{e.where}</b>
                      )}
                      {e.role ? ` · ${e.role}` : ""}
                    </div>
                    {e.what && <div class="desc">{e.what}</div>}
                  </div>
                </li>
              ))}
            </ol>
          </section>
        )
      }

      <!-- 正文（可选）：about.md 的 body -->
      <section class="block">
        <slot />
      </section>
    </article>
  </Center>
</BaseLayout>

<style lang="scss">
  .about {
    display: grid;
    gap: var(--space-3xl);
    padding-block-end: var(--space-3xl);
  }
  .updated {
    color: var(--gray-11);
    font-size: var(--step--1);
    margin: 0;
  }

  .intro {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-l);
    align-items: center;
    @media (width < 720px) {
      grid-template-columns: 1fr;
    }
  }
  .avatar-wrap {
    inline-size: 240px;
    block-size: 300px;
  }
  .avatar {
    inline-size: 100%;
    block-size: 100%;
    object-fit: cover;
    border-radius: 16px;
    border: 1px solid var(--gray-5);
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
  }
  .intro-text p {
    font-size: var(--step--1);
    line-height: 1.7;
    white-space: pre-line;
    margin: 0;
    text-wrap: balance;
  }

  .block {
    display: grid;
    gap: var(--space-m);
  }
  .block-title {
    font-size: var(--step-1);
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .skills {
    display: grid;
    gap: var(--space-xl);
    grid-template-columns: repeat(2, minmax(0, 1fr));
    @media (width < 720px) {
      grid-template-columns: 1fr;
    }
  }
  .skill-group {
    display: block;
  }
  .skill-head {
    font-size: var(--step-0);
    font-weight: 600;
    margin-bottom: 8px;
  }

  .pills {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .pill {
    position: relative;
    background: var(--gray-3);
    border-radius: 8px;
    padding: 6px 12px;
    cursor: default;
    transition: background 0.2s ease;
    font-size: var(--step--1);
  }
  .pill:hover {
    background: var(--gray-4);
  }

  /* 只有存在 data-tip 的 pill 才展示 tooltip */
  .pill[data-tip]::after {
    content: attr(data-tip);
    position: absolute;
    bottom: 120%;
    left: 50%;
    transform: translateX(-50%);
    background: var(--gray-12);
    color: #fff;
    font-size: 0.75rem;
    padding: 4px 8px;
    border-radius: 4px;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
    z-index: 1;
  }
  .pill[data-tip]:hover::after {
    opacity: 1;
  }

  .timeline {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: var(--space-m);
  }
  .timeline-item {
    display: grid;
    grid-template-columns: 160px 1fr;
    gap: var(--space-m);
    @media (width < 640px) {
      grid-template-columns: 1fr;
    }
  }
  .when {
    color: var(--gray-11);
    font-size: var(--step--1);
  }
  .what .line {
    font-size: var(--step-0);
  }
  .what .desc {
    color: var(--gray-11);
    margin-top: 4px;
  }

  /* 旧的文字链接样式（如果将来不用可删除） */
  .links {
    display: flex;
    flex-wrap: wrap;
    gap: 12px 16px;
    padding: 0;
    margin: 12px 0 0;
    list-style: none;
  }
  .links a {
    text-decoration: underline;
    color: var(--gray-12);
  }
  .links a:hover {
    opacity: 0.9;
  }
</style>
