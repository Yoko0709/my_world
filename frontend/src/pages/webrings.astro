---
const { webring } = Astro.props;
const d = webring.data;
const color = d.color ?? "indigo";
---
<article class="webring" style={`--ring-color: var(--${color}-9)`}>
  <h3><a href={d.url} target="_blank" rel="noopener noreferrer">{d.title ?? "Untitled"}</a></h3>
  {d.description && <p>{d.description}</p>}
  <nav class="nav">
    <a href={d.prev} target="_blank" rel="noopener noreferrer">← Prev</a>
    <span aria-hidden="true">·</span>
    <a href={d.next} target="_blank" rel="noopener noreferrer">Next →</a>
  </nav>
</article>
