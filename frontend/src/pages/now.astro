  .updated {
    color: var(--gray-11);
    font-size: var(--step--1);
    margin: 0;
  }

  .section { display: grid; gap: var(--space-m); }
  .section-title {
    font-size: var(--step-1);
    font-weight: 700;
    letter-spacing: .02em;
  }

  /* æ¨èå¡ç‰‡ç½‘æ ¼ */
  .grid-cards {
    list-style: none; margin: 0; padding: 0;
